# Docker Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration (Docker internal networking)
DATABASE_URL=postgresql://hyperliquid_user:hyperliquid_password@postgres:5432/hyperliquid_db

# Redis Configuration (Docker internal networking)
REDIS_URL=redis://redis:6379

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379
CELERY_RESULT_BACKEND=redis://redis:6379

# Hyperliquid API Configuration
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz/info
HYPERLIQUID_PRIVATE_KEY=your_private_key_here_if_needed
HYPERLIQUID_WALLET_ADDRESS=your_wallet_address_here_if_needed

# WebSocket Configuration
WEBSOCKET_URL=wss://api.hyperliquid.xyz/ws

# Trading Configuration
POPULAR_COINS=BTC,ETH,SOL,AVAX,ARB,OP,MATIC
BATCH_SIZE=50

# Application Configuration
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=False

# Optional: Override default ports (if needed)
# POSTGRES_PORT=5432
# REDIS_PORT=6379
# API_PORT=8000
